programa
{    

	inteiro quantidade
       inteiro estoque
	funcao inicio()
	programa
{    

	inteiro quantidade
       inteiro estoque
	funcao inicio()
	{
		quantidadeEstoque()
		calcularBaixaEstoque()
		
	}   
	funcao vazio quantidadeEstoque(){
		escreva("\n------------------calcular a quantidade de estoque--------------------------\n")
  
		escreva("Digite o número de estoque : ")
		leia(estoque)

         escreva("Digite o  número de quantidade : ")
		leia(quantidade)

		quantidade = estoque - quantidade

	escreva("\nResultado : " , quantidade , "  \n")
	}
	funcao vazio calcularBaixaEstoque(){
		
		se (estoque > quantidade){
			
			escreva(estoque+ " = estoque e maior que quantidade : "+quantidade )
		}
		senao se (quantidade > estoque){
			escreva(quantidade+ " quantidade maior que estoque : " )
		}
		senao
		{
			escreva(estoque+ " estoque e igual a quantidade : " )
		} 
		se(estoque == 0 ){
		escreva(estoque+ "\n seu estoque acabou : " )
		}
		senao se(estoque == 1 )
		escreva( " seu estoque e esse : " + quantidade)
		}    
	 	}
